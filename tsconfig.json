{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
    },
    "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx", "src/client/components/Form.jsx", "src/client/components/Question.jsx", "src/client/App.jsx", "src/client/components/SignIn.jsx",
    ]
  }